.row
	.col.m6.offset-m3.center
		%h5 Log in

		= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook), class: "btn blue darken-3"
		%br/
		= link_to "Login with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn red darken-1"
		%br/
		= link_to "Login with Github", user_omniauth_authorize_path(:github), class: "btn grey darken-2"


		= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
			= render partial: "shared/devisemes"
			.input-field
				= f.email_field :email, :class => "validate", :placeholder => "Email"

			.input-field
				= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Password"

			%button.btn.waves-effect.waves-light
				Login

			= link_to "Forgot Password", new_user_password_path, :class => "btn waves-effect waves-light"
