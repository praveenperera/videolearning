%br/
.row
	- @projects.each do |project|
		= link_to project do
			.col.s12.m6.l4
				.card
					.card-image.waves-effect.waves-black.waves-light
						= image_tag project.image(:medium)
					.card-content{ :style => "height: 6rem" }
						%span.card-title.grey-text.text-darken-4
							=project.shortname

