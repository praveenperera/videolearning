.row
	.col.m4
		.card.z-depth-2

			- if !@joined
				.center
					%h1=@project.price == 0? "Free" : "$#{@project.price}"

				.card-action.center
					-if user_signed_in?
						=form_tag free_path do
							= hidden_field_tag 'project_id', @project.id
							%button.btn.waves-effect.waves-light.pink.darken-2{type: "submit"}
								Take this Project

					-else
						=link_to new_user_session_path do
							%button.btn.waves-effect.waves-light.pink.darken-2{type: "submit"}
								Take this Project
			- else
				.center
					%br/
					=image_tag avatar_url(current_user), class: "circle responsive-img"
					%h5=current_user.name
				.card-action.center
					%span.valign-wrapper
						-@users.each do |u|
							=image_tag avatar_url(u), class: "circle responsive-img"
							&nbsp;
							=u.name


	.col.m8
		.card.z-depth-2
			.card-image
				=image_tag @project.image
			.card-content.grey-text.text-darken-4.paragraph-spacing.listable
				%h5=@project.name
				%hr/
				~markdown(@project.content)

				.collection{data: { no_turbolink: true }}
					-@tasks.each do |task|
						-if task.header
							.collection-item.active
								%i.mdi-social-school
									&nbsp;
									=task.title
						-else
							=link_to [task.project,task], class: "collection-item" do
								=task.title

