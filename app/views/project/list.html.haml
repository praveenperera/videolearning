%br/
.row{data: { no_turbolink: true }}
	-if @projects.count > 0
		- @projects.each do |project|
			= link_to project do
				.col.s12.m6.l4
					.card
						.card-image.waves-effect.waves-black.waves-light
							= image_tag project.image(:medium)
						.card-content{ :style => "height: 6rem" }
							%span.card-title.grey-text.text-darken-4
								=project.shortname
	-else
		.center
			%h5 Currently you're not in any projects!
			=link_to "Show me all projects", root_path, class: "btn btn-primary"


