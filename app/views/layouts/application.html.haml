      %nav.blue.lighten-1
        .container
          .nav-wrapper
            %a.brand-logo{:href => "#"} VideoLearning
            %a.button-collapse{"data-activates" => "mobile-demo", :href => "#"}
              %i.mdi-navigation-menu
            %ul.right.hide-on-med-and-down
              %li
                %a{:href => "#"} Courses
              %li
                %a{:href => "#"} Sign Up
              / Dropdown Trigger
              %li
                %a.dropdown-button{"data-activates" => "dropdown1", :href => "#!"}
                  Praveen Perera
                  %i.mdi-navigation-arrow-drop-down.right
            %ul#mobile-demo.side-nav
              %li
                %a{:href => "#"} Courses
              %li
                %a{:href => "#"} Sign Up
              / Dropdown Trigger
              %li
                %a.dropdown-button{"data-activates" => "dropdown2", :href => "#!"}
                  Praveen Perera
                  %i.mdi-navigation-arrow-drop-down.right
